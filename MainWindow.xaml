<Window x:Class="Zadanie10202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie10202"
        mc:Ignorable="d"
        Title="Заявки партнеров" Height="450" Width="900" FontFamily="Bahnschrift Light SemiCondensed" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <Image HorizontalAlignment="Left" Width="50" Source="/Новые технологии.png" Stretch="Uniform"/>
            <TextBlock>Компания "Новые технологии"</TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10,10,10,10" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button x:Name="addRequest" Height="40" Width="128" HorizontalAlignment="Left" Background="#546F94" Foreground="White" Click="addMaterial_Click">Создать заявку</Button>
            <Button x:Name="raschotMaterials" Height="40" Width="128" HorizontalAlignment="Left" Background="#546F94" Foreground="White" Margin="10,0,0,0" Click="raschotMaterials_Click">Расчет кол-ва материла</Button>
        </StackPanel>

        <ListBox x:Name="listBoxZaivki" Grid.Row="2" MouseDoubleClick="listBoxZaivki_MouseDoubleClick" Grid.ColumnSpan="2">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Border BorderBrush="Black" BorderThickness="1" Padding="15" Margin="-2" Background="#BBDCFA">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                    <TextBlock FontSize="20" TextWrapping="Wrap">
                                        <Run Text="{Binding Партнер.Типы_партнёров.Тип_партнёров}"/>
                                        <Run Text="|"/>
                                        <Run Text="{Binding Партнер.Наименование_партнера}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="15" TextWrapping="Wrap">
                                        <Run Text="Юридический адрес:"/>
                                        <Run Text="{Binding adresPartnera}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="15" TextWrapping="Wrap">
                                        <Run Text="{Binding Партнер.Телефон_партнера}"/>
                                    </TextBlock>
                                    <TextBlock FontSize="15" TextWrapping="Wrap">
                                        <Run Text="Рейтинг:"/>
                                        <Run Text="{Binding Партнер.Рейтинг}"/>
                                    </TextBlock>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="0,0,20,0">
                                    <TextBlock FontSize="20" TextWrapping="Wrap">
                                        <Run Text="Стоимость:"/>
                                        <Run Text="{Binding summaZaivki}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
